@model IEnumerable<DDPS.Api.Entities.Facilities>

<form method="post">
    <table class="table table-striped table-hover">
        <thead class="table-primary">
            <tr>
                <th scope="col"></th>
                <th scope="col">@Html.DisplayNameFor(model => model.Name)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var facility in Model)
            {
                <tr>
                    <td><input class="form-check-input" type="checkbox" name="facilitiesIds" value="@facility.Id" /></td>
                    <td>@facility.Name</td>
                </tr>
            }
        </tbody>
    </table>
    <button class="btn btn-primary" type="submit">Выбрать</button>
</form>
