@model IEnumerable<DDPS.Api.Entities.Bookings>

<h1>Заказы</h1>

<a asp-action="Create">Новый заказ</a>
</p>
<table class="table table-bordered table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Apartament.Number)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Apartament.Photo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Apartament.Tariff.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StartTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EndTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Apartament.Area)
        </th>
        <th>
            @Html.DisplayName("Удобства")
        </th>
        <th>
            @Html.DisplayName("Услуги")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TotalPrice)
        </th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Apartament.Number)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Apartament.Photo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Apartament.Tariff.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Apartament.Area)
            </td>
            <td>
                @foreach (var facility in item.Apartament.Facilities)
                {
                    @Html.DisplayFor(modelItem => facility.Name)
                }
            </td>
            <td>
                @foreach (var service in item.Apartament.Services)
                {
                    @Html.DisplayFor(modelItem => service.Name)
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalPrice)
            </td>
        </tr>
    }
</table>
