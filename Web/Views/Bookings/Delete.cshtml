@model DDPS.Api.Entities.Bookings

@{
    ViewData["Title"] = "Удаление заказа";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center">Удаление заказа</h1>

<h3 class="text-center">Вы точно хотите это удалить?</h3>
<div class="row">
    <div class="col-md-4 mx-auto">
        <div class="card mb-4">
            <div class="card-body">
                <h4 class="card-title">@Html.DisplayName("Дата начала бронирования")</h4>
                <p class="card-text">@Html.DisplayFor(model => model.StartTime)</p>
                <h4 class="card-title">@Html.DisplayName("Дата окончания бронирования")</h4>
                <p class="card-text">@Html.DisplayFor(model => model.EndTime)</p>
                <h4 class="card-title">Общая стоимость</h4>
                <p class="card-text">Пока нет формулы</p>
                <h4 class="card-title">@Html.DisplayName("Номер апартаментов")</h4>
                <p class="card-text">@Html.DisplayFor(model => model.Apartament.Number)</p>
                <h4 class="card-title">@Html.DisplayName("Клиент")</h4>
                <p class="card-text">@Html.DisplayFor(model => model.Client.SecondName) @Html.DisplayFor(model => model.Client.FirstName) @Html.DisplayFor(model => model.Client.LastName)</p>
                <h4 class="card-title">@Html.DisplayName("Заказные услуги")</h4>
                <p class="card-text">
                    @foreach (var service in Model.Services)
                    {
                        @service.Name
                        <br />
                    }
                </p>
                <form asp-action="Delete" class="text-center">
                    <button type="submit" class="btn btn-danger btn-lg mt-3">Удалить</button>
                    <input type="hidden" asp-for="Id" />
                    <a asp-action="Index" class="btn btn-secondary btn-lg mt-3">Вернуться к списку заказов</a>

                </form>
            </div>
        </div>
    </div>
</div>