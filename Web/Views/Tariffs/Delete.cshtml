@model DDPS.Api.Entities.Tariffs

@{
    ViewData["Title"] = "Удаление тарифа";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center">Удаление тарифа</h1>

<h3 class="text-center">Вы точно хотите это удалить?</h3>
<div class="row">
    <div class="col-md-4 mx-auto">
        <div class="card mb-4">
            <div class="card-body">
                <h4 class="card-title">@Html.DisplayName("Название тарифа")</h4>
                <p class="card-text">@Html.DisplayFor(model => model.Name)</p>
                <h4 class="card-title">@Html.DisplayName("Описание тарифа")</h4>
                <p class="card-text">@Html.DisplayFor(model => model.Description)</p>
                <h4 class="card-title">@Html.DisplayName("Цена тарифа")</h4>
                <p class="card-text">@Html.DisplayFor(model => model.Price)</p>
                <form asp-action="Delete" class="text-center">
                    <button type="submit" class="btn btn-danger btn-lg mt-3">Удалить</button>
                    <input type="hidden" asp-for="Id" />
                    <a asp-action="Index" class="btn btn-secondary btn-lg mt-3">Вернуться к списку тарифов</a>

                </form>
            </div>
        </div>
    </div>
</div>