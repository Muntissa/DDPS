@model DDPS.Api.TempModels.ClientDetailsModel

@{
    ViewData["Title"] = "Детальная информация";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Детальная информация</h1>

<div>
    <h4>Клиенты</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Client.SecondName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Client.SecondName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Client.FirstName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Client.FirstName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Client.LastName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Client.LastName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Client.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Client.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Client.PhoneNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Client.PhoneNumber)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Client.Id">Edit</a> |
    <a asp-action="Index">Вернуться к списку</a>
</div>

<hr />
@if (!Model.Bookings.Any())
{
    <h2>Заказов нет</h2>
}
else
{
    <table class="table table-bordered table-hover">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Bookings.First().Apartament.Number)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bookings.First().Apartament.Photo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bookings.First().Apartament.Tariff.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bookings.First().StartTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bookings.First().EndTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bookings.First().Apartament.Area)
            </th>
            <th>
                @Html.DisplayName("Удобства")
            </th>
            <th>
                @Html.DisplayName("Услуги")
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bookings.First().TotalPrice)
            </th>
            <th>

            </th>
        </tr>
        @foreach (var item in Model.Bookings)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Apartament.Number)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Apartament.Photo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Apartament.Tariff.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StartTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EndTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Apartament.Area)
                </td>
                <td>
                    @foreach (var facility in item.Apartament.Facilities)
                    {
                        @Html.DisplayFor(modelItem => facility.Name)
                    }
                </td>
                <td>
                    @foreach (var service in item.Apartament.Services)
                    {
                        @Html.DisplayFor(modelItem => service.Name)
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TotalPrice)
                </td>
                <td><a asp-controller="BookingsController" asp-action="Delete" asp-route-Id="@item.Id">Удалить</a></td>
            </tr>
        }
    </table>
}

