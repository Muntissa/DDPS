@model DDPS.Api.Entities.Clients

@{
    ViewData["Title"] = "Удаление клиента";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center">Удаление клиента</h1>

<h3 class="text-center">Вы точно хотите это удалить?</h3>
<div class="row">
    <div class="col-md-4 mx-auto">
        <div class="card mb-4">
            <div class="card-body">
                <h4 class="card-title">@Html.DisplayName("Фамилия")</h4>
                <p class="card-text">@Html.DisplayFor(model => model.SecondName)</p>
                <h4 class="card-title">@Html.DisplayName("Имя")</h4>
                <p class="card-text">@Html.DisplayFor(model => model.FirstName)</p>
                <h4 class="card-title">@Html.DisplayName("Отчество")</h4>
                <p class="card-text">@Html.DisplayFor(model => model.LastName)</p>
                <h4 class="card-title">@Html.DisplayName("Email")</h4>
                <p class="card-text">@Html.DisplayFor(model => model.Email)</p>
                <h4 class="card-title">@Html.DisplayName("Телефонный номер")</h4>
                <p class="card-text">@Html.DisplayFor(model => model.PhoneNumber)</p>
                <form asp-action="Delete" class="text-center">
                    <button type="submit" class="btn btn-danger btn-lg mt-3">Удалить</button>
                    <input type="hidden" asp-for="Id" />
                    <a asp-action="Index" class="btn btn-secondary btn-lg mt-3">Вернуться к списку клиентов</a>

                </form>
            </div>
        </div>
    </div>
</div>


