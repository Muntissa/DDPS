@model IEnumerable<DDPS.Api.Entities.Tariffs>


<div class="container-fluid mt-5">
    <h1 class="text-center mb-4">Выбор тарифа</h1>

    <div class="row">
        <div class="col-md-12 col-lg-6 mb-4 mb-lg-0">
            <a asp-action="CreateTariff" class="btn btn-success">Создать новый тариф</a>
        </div>
    </div>
    <br />
    <table class="table table-bordered table-hover">
        <thead class="table-primary">
            <tr>
                <th>Название</th>
                <th>Описание</th>
                <th>Цена (руб/день)</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null)
            {
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Price)
                        </td>
                        <td>
                            @using (Html.BeginForm())
                            {
                                <div>
                                    <input type="hidden" name="tariffId" value="@item.Id" />
                                    <button type="submit" class="btn btn-primary">Выбрать</button>
                                    <a asp-action="EditTariff" asp-route-tariffId="@item.Id" class="btn btn-secondary ">Изменить</a>
                                </div>
                            }
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>




